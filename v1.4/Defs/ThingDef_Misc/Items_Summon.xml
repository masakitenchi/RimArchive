			<expandHomeArea>false</expandHomeArea>
		</building>
		<tickerType>Normal</tickerType>
		<category>Item</category>
		<thingCategories>
			<li>ItemsMisc</li>
		</thingCategories>
		<tradeability>None</tradeability>
		<selectable>true</selectable>
		<statBases>
			<Mass>0.1</Mass>
			<Flammability>0</Flammability>
			<MarketValue>5</MarketValue>
