    <QuestScriptDef>
        <defName>BA_Raid</defName>
        <defaultHidden>true</defaultHidden>
        <autoAccept>true</autoAccept>
        <questNameRules>
            <rulesStrings>
                <li>questName->bossgroup</li>
            </rulesStrings>
        </questNameRules>
        <questDescriptionRules>
            <rulesStrings>
                <li>questDescription->bossgroup</li>
            </rulesStrings>
        </questDescriptionRules>
        <questContentRules>
            <rulesStrings>

                <li>bossDefeatedLetterLabel->[escortees0_label] defeated: [reward_label]</li>

                <li>bossDefeatedStudyChipLetterText->[defeated][study][manufacture]</li>
