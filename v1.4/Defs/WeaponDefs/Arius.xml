<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!--纱织-->
	<ThingDef ParentName="BAW_BaseHumanMakeableGun">
		<defName>BAW_Saori</defName>
		<label>Arius assault rifle</label>
		<description>Assault rifle used by Saori.\n\nCustomized by Saori in pursuit of efficiency. \n\nOnce the prey is in sight, it never misses its shots until the target is brought down.</description>
		<graphicData>
			<texPath>Weapon/Arius/Saori</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.15</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<weaponTags>
			<li>BAW_Saori</li>
		</weaponTags>
		<recipeMaker>
			<researchPrerequisite>ReserchArius</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
			<displayPriority>440</displayPriority>
		</recipeMaker>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<statBases>
			<WorkToMake>24000</WorkToMake>
			<Mass>3.5</Mass>
			<AccuracyTouch>0.73</AccuracyTouch>
			<AccuracyShort>0.79</AccuracyShort>
			<AccuracyMedium>0.90</AccuracyMedium>
			<AccuracyLong>0.85</AccuracyLong>
			<RangedWeapon_Cooldown>1.05</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>65</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_BA_Saori</defaultProjectile>
				<warmupTime>1.0</warmupTime>
				<range>36</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_BA_Saori</defName>
		<label>Bullet for Arius assault rifle</label>
		<graphicData>
			<texPath>Projectile/Bullet_blue</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.9</drawSize>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>15</damageAmountBase>
			<speed>80</speed>
			<armorPenetrationBase>0.2</armorPenetrationBase>
		</projectile>
	</ThingDef>
	
